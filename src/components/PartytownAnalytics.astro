---
const gtmId = import.meta.env.PUBLIC_GTM_ID
---

{
  gtmId && (
    <>
      <script type='text/partytown' is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gtmId}`} />

      <script type='text/partytown' is:inline define:vars={{ gtmId }}>
        window.dataLayer = window.dataLayer || [];
        window.gtag = function() {
          // eslint-disable-next-line prefer-rest-params
          window.dataLayer.push(arguments);
        };
        gtag('js', new Date());
        gtag('config', gtmId);
        console.log('ðŸ‘‹ Hello'); 
      </script>
    </>
  )
}
